{
    "controller": {
    },
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "AquaMedKurentoInteraction",
                    "roles": [
                        {
                            "name": "KurentoHub",
                            "permissions": [
                                {
                                    "uri": "*",
                                    "publish": true,
                                    "subscribe": true,
                                    "call": true,
                                    "register": true
                                }
                            ]
                        },
                        {
                            "name": "VideoConsumer",
                            "permissions": [
                                {
                                    "uri": "*",
                                    "publish": true,
                                    "subscribe": true,
                                    "call": true,
                                    "register": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                    "type": "web",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8080
                    },
                    "paths": {
                        "/": {
                            "type": "static",
                            "directory": "../web"
                        },
                        "ws": {
                            "type": "websocket"
                        },
                        "kurentoHub": {
                            "type": "websocket",
                            "auth": {
                                "wampcra": {
                                    "type": "static",
                                    "users": {
                                        "KurentoHub": {
                                            "secret": "secret2",
                                            "role": "KurentoHub"
                                        },
                                        "VideoConsumer": {
                                            "secret": "prq7+YkJ1/KlW1X0YczMHw==",
                                            "role": "VideoConsumer",
                                            "salt": "salt123",
                                            "iterations": 100,
                                            "keylen": 16
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            ]
        },
        {
            "type": "guest",
            "executable": "node",
            "arguments": [ "server.js" ],
            "options": {
                "workdir": "../server",
                "watch": {
                    "directories": [ "../server" ],
                    "action": "restart"
                }
            }
        }
    ]
}
